#!/bin/bash

POKEMONS=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")
DATA_DIR="pokemon_data"
API_URL="https://pokeapi.co/api/v2/pokemon"

mkdir -p "$DATA_DIR"

for pokemon in "${POKEMONS[@]}"; do
    echo "Fetching data for $pokemon..."

    success=false
    attempts=0

    while [ $attempts -lt 3 ]; do
        ((attempts++))
        
        # Fetch data quietly, retry on failure
        if curl -s -f "$API_URL/$pokemon" -o "$DATA_DIR/$pokemon.json"; then
            echo "Saved data to $DATA_DIR/$pokemon.json ✅"
            success=true
            break
        else
            echo "Attempt $attempts failed for $pokemon. Retrying..."
            sleep 2
        fi
    done

    if [ "$success" = false ]; then
        echo "❌ Failed to fetch data for $pokemon after 3 attempts. Skipping..."
        echo "$pokemon" >> failed_pokemon.log
    fi

    # Delay to prevent rate-limiting
    sleep 1
done

