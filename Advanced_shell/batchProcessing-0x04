#!/bin/bash

# Fetch multiple Pokémon data in parallel with proper process handling.

POKEMONS=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")
OUTPUT_DIR="pokemon_data"
ERROR_FILE="errors.txt"

mkdir -p "$OUTPUT_DIR"
> "$ERROR_FILE"

fetch_pokemon() {
    local name=$1
    local file="${OUTPUT_DIR}/${name}.json"

    echo "Fetching data for $name..."
    if curl -s --max-time 10 "https://pokeapi.co/api/v2/pokemon/${name}" -o "$file"; then
        echo "Saved data to $file ✅"
    else
        echo "Failed to fetch data for $name ❌" | tee -a "$ERROR_FILE"
        rm -f "$file"
    fi
}

# Store PIDs of background processes
pids=()

for pokemon in "${POKEMONS[@]}"; do
    fetch_pokemon "$pokemon" &
    pids+=($!)  # Save PID
done

# Wait for all jobs, kill if they hang
for pid in "${pids[@]}"; do
    if ! wait "$pid"; then
        echo "Process $pid failed or hung — killing it." | tee -a "$ERROR_FILE"
        kill -9 "$pid" 2>/dev/null
    fi
done

echo "All Pokémon data fetched."
if [[ -s "$ERROR_FILE" ]]; then
    echo "Some errors occurred. Check $ERROR_FILE."
fi
