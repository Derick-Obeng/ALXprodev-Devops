#!/bin/bash
# batchProcessing-0x04
# Fetch multiple Pokémon data in parallel and save to separate files.

POKEMONS=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")
OUTPUT_DIR="pokemon_data"
ERROR_FILE="errors.txt"

mkdir -p "$OUTPUT_DIR"
> "$ERROR_FILE"

fetch_pokemon() {
    local name=$1
    local file="${OUTPUT_DIR}/${name}.json"

    echo "Fetching data for $name..."
    if curl -s "https://pokeapi.co/api/v2/pokemon/${name}" -o "$file"; then
        echo "Saved data to $file ✅"
    else
        echo "Failed to fetch data for $name ❌" | tee -a "$ERROR_FILE"
        rm -f "$file"
    fi
}

# Loop through Pokémon and fetch in background
for pokemon in "${POKEMONS[@]}"; do
    fetch_pokemon "$pokemon" &
done

# Wait for all background jobs to complete
wait

echo "All Pokémon data fetched."
if [[ -s "$ERROR_FILE" ]]; then
    echo "Some errors occurred. Check $ERROR_FILE."
fi
