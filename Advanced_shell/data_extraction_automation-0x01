#!/bin/bash

# Extract values from JSON using jq
name=$(jq -r '.name' pokemon.json | sed 's/.*/\u&/')
type=$(jq -r '.types[0].type.name' pokemon.json | sed 's/.*/\u&/')
height=$(jq '.height' pokemon.json)
weight=$(jq '.weight' pokemon.json)

# Convert to meters and kg
formatted_height=$(awk "BEGIN {printf \"%.1f\", $height/10}")
formatted_weight=$(awk "BEGIN {printf \"%.1f\", $weight/10}")

# Required exact output
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
